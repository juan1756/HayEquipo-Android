<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="@drawable/background_item_partido"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_solicitud_apodo"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:hint="Invitacion:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_solicitud_fecha"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"/>

        <TextView
            android:id="@+id/item_solicitud_direccion"
            android:layout_width="260dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_solicitud_descripcion"
            android:layout_width="263dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_solicitud_aceptar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:background="@drawable/aceptar"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/item_solicitud_rechazar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cancelar"
        android:padding="5dp"/>

</LinearLayout>